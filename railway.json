{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway"
  },
  "deploy": {
    "startCommand": "node dist/index.js gateway --bind lan --allow-unconfigured",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE"
  }
}
